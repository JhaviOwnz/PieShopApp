@model PieShop.ViewModel.HomeViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=devide-width" />
</head>
<body>
    <h2>@Model.Title</h2>

    @foreach(var pie in Model.Pies)
    {
        <div>
            <h2>@pie.Name</h2>
            <h3>@pie.Price.ToString("c")</h3>
        </div>

    }
</body>
</html>